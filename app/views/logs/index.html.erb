
<h1>Logs</h1>

<%= paginate @logs, :theme => 'twitter-bootstrap-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Who</th>
      <th>Head</th>
      <th>Body</th>
      <th>Level</th>
      <th>Datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @logs.each do |log| %>
      <tr>
        <td><%= who_present(log.who) %></td>
        <td><%= log.head %></td>
        <td><%= log.body %></td>
        <td><%= log.level %></td>
        <td><%= log.created_at %></td>
        <td><%= link_to 'Show', log %></td>
        <td><%= link_to 'Edit', edit_log_path(log) %></td>
        <td><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
