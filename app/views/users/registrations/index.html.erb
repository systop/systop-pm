
<h1>Users</h1>

<%= paginate @users, :theme => 'twitter-bootstrap-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th>Workgroup</th>
      <th>Timezone</th>
      <th>Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user_show_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.workgroup %></td>
        <td><%= user.timezone %></td>
        <td><%= user.phone %></td>
        <td><%= link_to 'Изменить', user_admin_edit_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Log', new_log_path %>
